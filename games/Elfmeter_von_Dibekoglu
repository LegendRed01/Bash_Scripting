#! /bin/bash

# Variablen
declare -A spieler
declare -a versuch1
declare -a versuch2
declare -A versuch
declare -i maximale_versuche
declare -i amzug=1
declare -i Spieleranzahl=1
declare -i ToreSpieler1=0
declare -i ToreSpieler2=0

trap "askReset" INT
#Animation

